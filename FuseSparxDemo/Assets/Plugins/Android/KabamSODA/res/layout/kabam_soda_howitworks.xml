<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kabam_soda_dialog_lightgray"
    android:contentDescription="@string/kabam_soda_rewards_tab1"
    android:padding="0dp"
    android:orientation="vertical"  >

    <ImageView
            android:id="@+id/kabam_soda_rewards_logo"
            android:layout_width="210dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/kabam_soda_rewards_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <!--
        FIXME: tweak the right margin on icons so text lines up (note: icons are centered)
        Better solution is to have icons all the same dimensions
        -->
        <ImageView
            android:id="@+id/kabam_soda_ic_play"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/kabam_soda_ic_play" />
        <TextView
            android:id="@+id/kabam_soda_fte_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/kabam_soda_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/kabam_soda_ic_earn"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/kabam_soda_ic_earn" />
        <TextView
            android:id="@+id/kabam_soda_fte_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/kabam_soda_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/kabam_soda_ic_redeem"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/kabam_soda_ic_redeem" />
        <TextView
            android:id="@+id/kabam_soda_fte_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/kabam_soda_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kabam_soda_fte_stroke_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kabam_soda_border_offwhite"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/kabam_soda_fte_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="25dp"
        android:gravity="center"
        android:textColor="@color/kabam_soda_whitegray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/kabam_soda_dialog_darkgray" />

</LinearLayout>
