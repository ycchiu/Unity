<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <TextView
        android:id="@+id/kabam_soda_redeem_authtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/kabam_soda_redeem_authtitle"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kabam_soda_redeem_authinstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kabam_soda_redeem_authtitle"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/kabam_soda_redeem_authinstructions"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/kabam_soda_redeem_authbutton_google"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kabam_soda_redeem_authinstructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/kabam_soda_buttongoogle" />

    <Button
        android:id="@+id/kabam_soda_redeem_authbutton_facebook"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kabam_soda_redeem_authbutton_google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/kabam_soda_buttonfacebook" />

    <TextView
        android:id="@+id/kabam_soda_redeem_authterms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kabam_soda_redeem_authbutton_facebook"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/kabam_soda_redeem_authterms"
        android:textColor="@color/kabam_soda_whitegray"
        android:textColorLink="@color/kabam_soda_orange"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>