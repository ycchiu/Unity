<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#66444444"
                android:endColor="#66666666"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#661B1B1B" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#66444444"
                android:endColor="#66666666"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#661B1B1B" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#66444444"
                android:endColor="#66666666"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#661B1B1B" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>