<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/kabam_soda_dialog_lightgray"
    android:contentDescription="@string/kabam_soda_rewards_tab1"
    android:orientation="vertical"
    android:padding="0dp" >

    <!-- FIXME: Scaling image to 75% - Get "real" image from product once they approve layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="00dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/kabam_soda_rewards_logo" />

        <LinearLayout
        android:id="@+id/kabam_soda_fte_stroke_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/kabam_soda_border_offwhite"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kabam_soda_dialog_darkgray"
        android:baselineAligned="false"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <!--
	        FIXME: tweak the top/bottom margin on icons so text lines up 
	        (note: icons are bottom aligned) 
	        Better solution is to have icons all the same dimensions
            -->

            <ImageView
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/kabam_soda_ic_play" />

            <TextView
                android:id="@+id/kabam_soda_fte_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/kabam_soda_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/kabam_soda_ic_earn" />

            <TextView
                android:id="@+id/kabam_soda_fte_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/kabam_soda_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/kabam_soda_ic_redeem" />

            <TextView
                android:id="@+id/kabam_soda_fte_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/kabam_soda_white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kabam_soda_fte_stroke_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/kabam_soda_border_offwhite"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/kabam_soda_fte_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kabam_soda_dialog_lightgray"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/kabam_soda_whitegray"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>